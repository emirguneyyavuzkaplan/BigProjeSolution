@model IEnumerable<YemeklerKategori>


<a class="btn btn-primary" asp-controller="YemeklerKategori" asp-action="Create">Yemek Kategorisi</a>
<table class="table table-hover">
    <thead>
        <tr>

            <td>@Html.DisplayNameFor(p=>p.Id)</td>
            <td>@Html.DisplayNameFor(p=>p.YemekId)</td>
            <td>@Html.DisplayNameFor(p=>p.KategoriId)</td>
            
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.YemekId</td>
                <td>@item.KategoriId</td>
                
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="YemeklerKategori" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-info" asp-action="Update" asp-controller="YemeklerKategori" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>