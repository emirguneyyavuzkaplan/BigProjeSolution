@model Menu


<form asp-controller="Menu" asp-action="Update" method="post">

    <div class="mb-3">
        <label asp-for="MenuAdi" class="form-label">Menu Adi</label>
        <input type="text" class="form-control" asp-for="MenuAdi">
    </div>

    <div class="mb-3">
        <label asp-for="Fiyat" class="form-label">Fiyat</label>
        <input type="text" class="form-control" asp-for="Fiyat">
    </div>

    <div class="mb-3">
        <label asp-for="Acıklama" class="form-label">Acıklama</label>
        <input type="text" class="form-control" asp-for="Acıklama">
    </div>

    



    <input type="submit" class="btn btn-primary" value="Kaydet" />
    <a class="btn btn-info" asp-action="Index" asp-controller="Menu">Listeye Geri Dön</a>

</form>