@model Menu


<form asp-controller="Menu" asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="MenuAdi" class="form-label">MenuAdi</label>
        <input type="text" class="form-control" asp-for="MenuAdi">
    </div>

    <div class="mb-3">
        <label asp-for="Acıklama" class="form-label">Acıklama</label>
        <input type="text" class="form-control" asp-for="Acıklama">
    </div>

    <div class="mb-3">
        <label asp-for="Fiyat" class="form-label">Fiyat</label>
        <input type="text" class="form-control" asp-for="Fiyat">
    </div>



    <button type="submit" class="btn btn-primary">Kaydet</button>

    <a class="btn btn-info" asp-action="Index" asp-controller="Filmler">Listeye Geri Dön</a>

</form>